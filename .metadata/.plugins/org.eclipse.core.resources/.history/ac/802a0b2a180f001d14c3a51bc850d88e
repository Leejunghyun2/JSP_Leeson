<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%
 String name = "홍길동";
 int kor = 90;
 int eng = 90;
 int mat = 90;
 int tot = kor + eng + mat;
 double avg = tot/3;
 char grade = '가';
 if(avg >= 90){
	 grade = '수';
 } else if(avg >= 80){
	 grade = '우';
 } else if(avg >= 70){
	 grade = '미';
 } else if(avg >= 60){
	 grade = '양';
 } 
 
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<h2>test02.jsp</h2>


이름 : <%=name %> <br>
국어 : <%=kor %> <br>
영어 : <%=eng %> <br>
수학 : <%=mat %> <hr>
<table border="1">
	<tr>
		<th width="80px">이름 : </th>
		<td width="150px"><%=name %></td>
	</tr>
	<% if(kor >= 60) { %>
	<tr>
		<th>국어 : </th>
		<td><%=kor %></td>
	</tr>
	<% } %>
	<tr>
		<th>영어 : </th>
		<td><%=eng %></td>
	</tr>
	<tr>
		<th>수학 : </th>
		<td><%=mat %></td>
	</tr>
	<tr>
		<th>평균 : </th>
		<td><%=avg %>  
		(<%if(grade == '수' || grade == '우') { %>
		<font style="color : red;"><%=grade %><% }%>
		<% if(grade == '미' || grade == '양') { %>
		<font style="color : blue;"><%=grade %><% }%>
		<% if(grade == '가') { %>
		<font style="color : green;"><%=grade %><% }%>
		</font>)</td>
	</tr>
	
		
	
</table>

</body>
</html>